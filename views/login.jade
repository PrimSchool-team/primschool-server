extends layout

block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title Connexion
        br
        div.account-wall
          form(class='form-signin', action='/login', method='POST')
            input(type='text', name='username' class='form-control', placeholder='Login',required, autofocus)
            input(type='password', name='password' class='form-control', placeholder='Password', required)
            br
            button(class='btn btn-lg btn-primary btn-block', type='submit') Se connecter
            span.clearfix
          br
          a(href='/signup', class='text-center new-account') S'inscrire
          #message
          if message
            h1.text-center.error-message #{message}