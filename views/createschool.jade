extends layout

block content
    script(src="/javascripts/admin.js")

    br
    br
    div.row.vertical-offset-100
        div.col-md-8.col-md-offset-2
            div.panel.panel-primary
                div.panel-heading
                    h3#title(class='panel-title') Nouvelle école
                    div#backdiv(style="float: right;")
                        a#backlink(class='btn btn-danger btn-md active',href="#")
                            i(class="glyphicon glyphicon-share-alt")
                div.panel-body#panelbody
                    form(class='form-signup', action='#', method='POST')
                    #addschool
                        fieldset
                            input#inputName(type='text', name='name' class='form-control', placeholder='Nom',required, autofocus)
                            br
                            select#inputIdOwner(name="idOwner", class='form-control', placeholder='Propriétaire',required)
                                option(value='-1') Sélectionner un responsable
                                each user in users
                                    if user.username != 'root'
                                        option(value='#{user._id}') #{user.username}
                            br
                            button(class='btn btn-lg btn-primary btn-block', onclick="addSchool(event, $(this))", type='submit') Créer