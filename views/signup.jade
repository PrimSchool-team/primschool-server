extends layout

block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title Inscription
        br
        div.account-wall
          form(class='form-signup', action='/signup', method='POST')
            input(type='text', name='username' class='form-control', placeholder='Login',required, autofocus)
            input(type='password', name='password' class='form-control', placeholder='Mot de passe', required)
            input(type='text', name='email' class='form-control', placeholder='Email', required)
            input(type='text', name='firstName' class='form-control', placeholder='Pr√©nom', required)
            input(type='text', name='lastName' class='form-control', placeholder='Nom', required)
            br
            button(class='btn btn-lg btn-primary btn-block', type='submit') S'inscrire
            span.clearfix
          #message
          if message
            h1.text-center.error-message #{message}